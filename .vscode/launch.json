    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Launcher", // Keep only the relevant configuration
            "request": "launch",
            "mainClass": "dev.jpakjr.rpg1.Launcher",
            // "projectName": "rpg", // Removed projectName as it might cause issues
            "cwd": "${workspaceFolder}", // Explicitly set the Current Working Directory
            // Define classpath using the classPaths attribute
            "classPaths": [
                "${workspaceFolder}/RPG1/bin",
                "${workspaceFolder}/res"
            ]
            // "vmArgs": [ ... ] // Remove vmArgs for classpath
        }
    ]
}
